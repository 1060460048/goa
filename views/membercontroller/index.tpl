<div class="card">
    <div class="card-header">
        会员中心
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-sm-4">
                <h3>{{.QuestionCount}}</h3>
                <p>提问</p>
            </div>
            <div class="col-sm-4">
                <h3>{{.AnswerCount}}</h3>
                <p>回答</p>
            </div>
            <div class="col-sm-4">
                <h3>{{.Rate}}%</h3>
                <p>采纳率</p>
            </div>
        </div>
    </div>
</div>